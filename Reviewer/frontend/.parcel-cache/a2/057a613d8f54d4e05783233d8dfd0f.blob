body{
    background-color: white;
    display: block;
    width: 100%;
}

.Sidebarmenu{
    height: 100%;
    width:300px;
    background-color: darkslategray;
    color: white;
    float: left;
}

.Sidebarmenu ul{
    color: white;
    text-decoration: none;
    margin: 15px;
    padding: 15px;
}

.Sidebarmenu ul li{
    color: white;
    list-style-type: none; /* Remove bullets */

    text-decoration: none;
    margin: 15px;
    padding:15px;
    height: 50px;
    border: white;

}

.Sidebarmenu ul li a{
    color: white;
    text-decoration: none;
    margin: 5px;
    padding: 5px;
    height: 125px;
    border: white;
    
}

.content{
    float: left;
    width: 30%;
    margin: 20px 30px;
}

.container-fluid .frmProfile{
    width: 30%;
    float: left;
}